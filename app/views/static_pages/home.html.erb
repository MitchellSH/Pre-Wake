<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3 class='animation fadeInRight'>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit animated fadeIn">
    <h1 class='animation fadeInLeft'>Welcome to Pre Wake</h1>

    <h2 class='animation fadeInRight'>
      A pre Wake app where friends can post what they will miss about you before you "kick the bucket".
    </h2>

    <%= link_to "Sign In", signin_path, class: "btn btn-large btn-primary animation fadeInLeft" %>
    <%= link_to "Sign Up", signup_path, class: "btn btn-large btn-primary animation fadeInRight" %>
  </div>
<% end %>
