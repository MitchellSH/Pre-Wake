<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>

    </aside>
    <div class="span8">
      <h3 class='animated fadeInRight'>My Posts</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit animated fadeIn">
    <h1 class='main-title animated fadeInUp'>Welcome to Pre Wake</h1>

    <h2 class='animated fadeInUp'>
      Post what you will miss about them before they "kick the bucket".
    </h2>

    <%= link_to "Sign In", signin_path, class: "btn btn-large btn-primary animated fadeInLeft" %>
    <%= link_to "Sign Up", signup_path, class: "btn btn-large btn-primary animated fadeInRight" %>
  </div>
<% end %>
