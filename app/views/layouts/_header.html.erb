<header class="navbar navbar-fixed-top animated slideInDown">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to "Pre Wake", root_path, id: "logo", class: 'animated fadeInLeft' %>
        <nav>
          <ul class="nav pull-right">
            <li><%= link_to "Home", root_path, class: 'animated fadeInDown one' %></li>
            <li><%= link_to "About", about_path, class: 'animated fadeInDown two' %></li>
            <li><%= link_to "Contact", contact_path, class: 'animated fadeInDown three' %></li>
            <% if signed_in? %>
              <li><%= link_to "Users", users_path, class: 'animated fadeInDown four' %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle animated fadeInDown four" data-toggle="dropdown">Account<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Sign in", signin_path, class: 'animated fadeInDown four' %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </header>
